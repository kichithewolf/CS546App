<div class="row">
  <div class="col-sm-12">
    <form class="server-form" method="post">
      
      {{#if error }}
      <div class="form-group">
        <div class="alert alert-danger">
          {{ error }}
        </div>
      </div>
      {{/if}}
      <div class="form-group">
        <button type="submit" class="btn btn-default">Sign in with Twitter</button>
      </div>
      {{#if result }}
      <div class="form-group">
        <div class="alert alert-success">
        {{ result }}
        </div>
      </div>
      {{/if}}
    </form>
  </div>
</div>